---
import { PageHeader } from '@lwj/design-system';
import { IconArrow } from '@lwj/design-system';
import Layout from '../../layouts/Layout.astro';

type PostPreview = {
	title: string;
	description: string;
	url: string;
};

const posts = (await Astro.glob('./**/*.mdx')).map((p: any): PostPreview => {
	return {
		title: p.frontmatter.meta.title,
		description: p.frontmatter.meta.description,
		url: p.url,
	};
});
---

<style>
	.post-preview {
		max-width: 500px;
	}

	.post-preview:not(:first-of-type) {
		margin-top: 3rem;
	}

	.post-preview h2 {
		font-size: 1.25rem;
		margin: 0;
		text-align: left;
	}

	.post-preview h2 a {
		color: inherit;
		text-decoration: none;
	}

	.post-preview p {
		margin: 1rem 0 0.5rem;
	}

	.post-preview .read-more {
		align-items: center;
		color: var(--color-pink-text);
		display: flex;
		font-size: 0.625rem;
		font-weight: 600;
		gap: 0.25rem;
		justify-content: flex-end;
		letter-spacing: 0.2em;
		text-align: right;
		text-transform: uppercase;
		text-decoration: none;
	}
</style>
<Layout title="Blog">
	<main>
		<PageHeader />
		<section class="block post-previews">
			{
				posts.map((post: PostPreview) => {
					return (
						<article class="post-preview">
							<h2>
								<a href={post.url}>{post.title}</a>
							</h2>
							<p>{post.description}</p>
							<a href={post.url} class="read-more">
								read this post <IconArrow />
							</a>
						</article>
					);
				})
			}
		</section>
	</main>
</Layout>
